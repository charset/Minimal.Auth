<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        </Found>
        <NotFound>
            <div style="width:100%;height:100vh;font-size:40pt;display:flex;justify-content:center;color:royalblue;flex-direction:column;text-align:center;">
                <img height="650" width="1162" src="images/status/404.png" />
            </div>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

